<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @schedule.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @schedule.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:speaker) %>:</strong></dt>
  <dd><%= @schedule.speaker %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @schedule.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @schedule.date %></dd>
</dl>

<% if current_user%>
 <% if current_user.admin %>
        
      <div class="form-actions">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    registers_path, :class => 'btn btn-primary'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_register_path(@register), :class => 'btn' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    register_path(@register),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>


       <% else %>
               <%= link_to "Registrate con facebook", "/auth/facebook", id: "sign_in" %>

       <% end %>
<% else %>
<% end -%>
