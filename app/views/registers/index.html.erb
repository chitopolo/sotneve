 <% if current_user%>
 <% if current_user.admin %>
<%- model_class = Register -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first) %></th>
      <th><%= model_class.human_attribute_name(:last) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:cellphone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:paymentmethod) %></th>
      <th><%= model_class.human_attribute_name(:nitname) %></th>
      <th><%= model_class.human_attribute_name(:nitnumber) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= link_to register.id, register_path(register) %></td>
        <td><%= register.first %></td>
        <td><%= register.last %></td>
        <td><%= register.city %></td>
        <td><%= register.phone %></td>
        <td><%= register.cellphone %></td>
        <td><%= register.email %></td>
        <td><%= register.company %></td>
        <td><%= register.paymentmethod %></td>
        <td><%= register.nitname %></td>
        <td><%= register.nitnumber %></td>
        <td><%=l register.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_register_path(register), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      register_path(register),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_register_path,
            :class => 'btn btn-primary' %>

<% end -%>
<% end -%>

